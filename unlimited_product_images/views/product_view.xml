<openerp>
    <data>
<!--  Modify Product form to include 2 more images -->
     <record model="ir.ui.view" id="optima_product__form">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
              <xpath expr="//page[@name='notes']" position="after">
		<page string="Images and Settings" name="product_images" groups="base.group_sale_manager">
		    <group string="Image Settings">
			<group>
			<field name="zoomType"/>
			<field name="scrollZoom"/>
			<field name="cursor"/>
			<field name="lensShape" attrs="{'invisible': [('zoomType', '=', 'inner')]}"/>
			<field name="easing" attrs="{'invisible': [('zoomType', '=', 'lens')]}"/>
			<field name="tint" attrs="{'invisible': [('zoomType', '!=', 'window')]}"/>
			</group>
			<group>
			<field name="tintColour"  attrs="{'invisible': [('tint', '!=', True)]}"/>
			<field name="tintOpacity"  attrs="{'invisible': [('tint', '!=', True)]}"/>
			<field name="lensSize" attrs="{'invisible': [('zoomType', '!=', 'lens')]}"/>
			<field name="lensFadeIn" attrs="{'invisible': [('zoomType', '!=', 'lens')]}"/>
			<field name="lensFadeOut" attrs="{'invisible': [('zoomType', '!=', 'lens')]}"/>
			<field name="zoomWindowPosition" attrs="{'invisible': [('zoomType', '!=', 'window')]}"/>
			<field name="zoomWindowWidth" attrs="{'invisible': [('zoomType', '!=', 'window')]}"/>
			<field name="zoomWindowHeight" attrs="{'invisible': [('zoomType', '!=', 'window')]}"/>
			<field name="zoomWindowFadeIn" attrs="{'invisible': [('zoomType', '!=', 'window')]}"/>
			<field name="zoomWindowFadeOut" attrs="{'invisible': [('zoomType', '!=', 'window')]}"/>
			</group>
		    </group>
		   <field name="image_ids"  mode="kanban" context="{'default_product_id': active_id}">
			<kanban string="Product Images">
			 <field name="sequence" string="Order of Display"/>
			 <field name="name"/>
			 <field name="image_medium" string="Image"/>
			 <field name="create_date"/>
			 <field name="write_date"/>
			 <field name="publish"/>
			 <templates>
				<t t-name="kanban-box">
				  <div class="oe_kanban_color_alert oe_kanban_global_click">
				    <div class="oe_avatar">
				    <!--<div class="o_kanban_image"> -->
				      <img t-if="record.image_medium.raw_value" t-att-src="'data:image/png;base64,'+record.image_medium.raw_value" />
				    </div>
				    <div class="oe_kanban_details" style="text-indent:8px !important;">
					<div><strong> Name: </strong><field name="name"/></div>
					<div><strong> Sequence: </strong><field name="sequence"/></div>
					<div t-if="record.publish.raw_value"><strong> Published: </strong>Yes</div>
					<div t-if="!record.publish.raw_value"><strong> Published: </strong>No</div>
				        <a t-if="!read_only_mode" type="delete" class="fa fa-trash pull-left"/>
				    </div>
				  </div>
				</t>
			 </templates>
			</kanban>
		   </field>
		</page>
              </xpath>
            </field>
     </record>
<record id="product_images_form_view" model="ir.ui.view">
   <field name="name">product.template.images.form</field>
   <field name="model">product.images</field>
   <field name="arch" type="xml">
	<form>
	 <sheet>
	  <field name="image_medium" widget="image" class="oe_avatar"/>
	   <div class="oe_title">
		<label class="oe_edit_only" for="name" string="Image Name"/>
		<h1><field name="name" placeholder="Image Name"/></h1>
		<div name="options" groups="base.group_user">
                    <div>
                           <field name="publish"/>
                           <label for="publish"/>
                    </div>
               </div>
	   </div>
	   <group>
		<group>
		  <field name="sequence"/>
		</group>
		<group>
		  <field name="product_id"/>
		</group>
	   </group>
	 </sheet>
	</form>
   </field>
</record>
    </data>
</openerp>

