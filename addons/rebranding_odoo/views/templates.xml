<openerp>
    <data>
	<template inherit_id="website.layout_footer_copyright" id="footer_inherit" name="Footer Copyright Inherited">
		<xpath expr="//div[@t-ignore='true']" position="replace"> <!-- Removes Poered by Odoo Ecommerce -->
		</xpath>
	</template>
	<template inherit_id="web.login_layout" id="web_layout_login_inherit" name="Login Layout inherited">
		<xpath expr="//div[@t-if='not disable_footer']//a[@href='https://www.odoo.com']" position="replace"> <!-- Removes Poered by Odoo in web login-->
		</xpath>
	</template>
	<template inherit_id="web.menu_secondary" id="web_menu_secondary_inherit" name="web menu secondary inherited">
		<xpath expr="//div[@class='oe_footer']" position="replace"> <!-- Removes Poered by Odoo in web login-->
		</xpath>
	</template>
    </data>
</openerp>
