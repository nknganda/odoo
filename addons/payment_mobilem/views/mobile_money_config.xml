<openerp>
    <data>
        <record model="ir.ui.view" id="payment_acquirer_mobile_money">
            <field name="model">account.config.settings</field>
            <field name="inherit_id" ref="account.view_account_config_settings"/>
            <field name="arch" type="xml">
              <xpath expr="//div[@name='payment_acquirer']" position="after">
                    <div>
                        <field name="module_payment_mobilem" class="oe_inline"/>
                        <label for="module_payment_mobilem"/>
                        <div style="padding-left: 50px !important;" attrs="{'invisible': [('module_payment_mobilem', '=', False)]}">
                            <field name="mobilem_create_payment"/>
			    <label for="mobilem_create_payment"/>
                       	</div>
                        <div style="padding-left: 50px !important;" attrs="{'invisible': [('module_payment_mobilem', '=', False)]}">
                            <field name="mobilem_create_invoice"/>
			    <label for="mobilem_create_invoice"/>
                       </div>
                        <div style="padding-left: 100px !important;" attrs="{'invisible': ['|',('module_payment_mobilem', '=', False),('mobilem_create_invoice', '=', False)]}">
                            <field name="mobilem_send_invoice"/>
			    <label for="mobilem_send_invoice"/>
                       </div>
                        <div style="padding-left: 50px !important;" attrs="{'invisible': [('module_payment_mobilem', '=', False)]}">
                            <field name="mobilem_register_payment"/>
			    <label for="mobilem_register_payment"/>
                       </div>
                    </div>
	      </xpath>
	    </field>
        </record>
    </data>
</openerp>
