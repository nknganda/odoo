<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- mobile Providers form view definition -->
    
    <record model="ir.ui.view" id="mobile_providers_form">
      <field name="name">Mobile Providers Form</field>
      <field name="model">mobile.providers</field>
      <field name="arch" type="xml">
        <form>
	 <sheet>
             <field name="logo" class="oe_avatar" widget="image"/>
	  <group>
	    <group>
             <field name="name"/>
	    </group>
	    <group>
             <field name="code"/>
	    </group>
	  </group>
	  <notebook>
	    <page name="regex" string="Regular Expressions">
             <field name="regex_ids" context="{'default_provider_id': active_id}"/>
	    </page>
	  </notebook>
	 </sheet>
        </form>
      </field>
    </record>
    
    <!--Mobile Providers list view definition -->
    
    <record model="ir.ui.view" id="mobile_providers_list">
      <field name="name">mobile providers list</field>
      <field name="model">mobile.providers</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="code"/>
          <field name="create_date"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="mobile_providers_action_window">
      <field name="name">Mobile Providers</field>
      <field name="res_model">mobile.providers</field>
      <field name="view_mode">tree,form</field>
    </record>
    

