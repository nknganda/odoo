<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- payment_mobile form view definition -->
    
    <record model="ir.ui.view" id="payment_mobile_form">
      <field name="name">payment_mobile form</field>
      <field name="model">payment.mobile</field>
      <field name="arch" type="xml">
        <form edit="0" create="0" delete="0">
	 <sheet>
	  <group string="Transaction Details">
	    <group>
             <field name="sent_from"/>
             <field name="code"/>
             <field name="sender_name" attrs="{'invisible':[('sender_name', '=', False)]}"/>
             <field name="receiver_name" attrs="{'invisible':[('receiver_name', '=', False)]}"/>
             <field name="sender_number" attrs="{'invisible':[('sender_number', '=', False)]}"/>
             <field name="receiver_number" attrs="{'invisible':[('receiver_number', '=', False)]}"/>
             <field name="receiver_number" attrs="{'invisible':[('receiver_number', '=', False)]}"/>
	    </group>
	    <group>
             <field name="amount"/>
             <field name="date"/>
             <field name="time"/>
             <field name="balance"/>
	    </group>
	  </group>
	  <group string="Other Message Details">
	    <group>
             <field name="account_id"/>
             <field name="sent_to"/>
             <field name="timestamp"/>
             <field name="message_id"/>
	    </group>
	    <group>
             <field name="provider_id"/>
             <field name="create_date" readonly="True"/>
             <field name="create_uid" readonly="True"/>
             <field name="device_id"/>
	    </group>
	  </group>
	  <group>
	  </group>
	   <label for="message"/>
           <field name="message"/>
	 </sheet>
        </form>
      </field>
    </record>
    
    <!-- payment_mobile list view definition -->
    
    <record model="ir.ui.view" id="payment_mobile_list">
      <field name="name">payment_mobile list</field>
      <field name="model">payment.mobile</field>
      <field name="arch" type="xml">
        <tree edit="0" delete="0" import="0" create="0">
          <field name="sent_from"/>
          <field name="sent_to"/>
          <field name="timestamp"/>
          <field name="account_id"/>
          <field name="provider_id"/>
          <field name="create_date"/>
          <field name="create_uid"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="payment_mobile_action_window">
      <field name="name">Mobile Payment Data</field>
      <field name="res_model">payment.mobile</field>
      <field name="view_mode">tree,form</field>
    </record>
    

