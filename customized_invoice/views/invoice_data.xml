<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
	<template id="invoice_data">
                 <div class="col-xs-12 mt8 mb8" t-attf-style="padding-left:0px; padding-right:0px;"> <!--start of DATA-->
                    <table class="table  table-condensed" t-attf-style="color:{{o.text_color}};" >
                        <thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
                             <t t-set="th_style" t-value="'border-bottom: 1px solid {} !important; white-space:nowrap;'.format(o.text_color)"></t>
                            <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{o.text_color}} !important;">
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"></i></th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-th-large"> Description</i></th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-sort-amount-asc"> Quantity</i></th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-money"> Unit Price</i></th>
                                <th class="text-right" t-attf-style="{{th_style}}" 
                                                groups="sale.group_discount_per_so_line"><i class="fa fa-minus-square"> Discount(%)</i></th>
                                <th class="text-center" t-attf-style="{{th_style}}"><i class="fa fa-pencil-square"> Taxes</i></th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-usd"> Amount</i></th>
                            </tr>
                        </thead>
                        <tbody>
                          <t t-foreach="o.invoice_line" t-as="l">
                             <tr t-attf-style="background-color:{{o.odd if l_parity in 'odd' else o.even}}; page-break-inside: avoid !important;">
                                <td><span t-esc="l_index + 1"/></td>
                                <td><span t-field="l.name"/></td>
                                <td class="text-right">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uos_id"  groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                        <span t-field="l.price_unit"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                                <td class="text-right" groups="sale.group_discount_per_so_line"><span t-field="l.discount"/></td>
                                <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_id))"/>
                                </td>
                                <td class="text-right">
                                        <span t-field="l.price_subtotal"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>

                                </td>
                            </tr>
                          </t>
                        </tbody>
                    </table>
                 </div><!--End of DATA-->
                 <div class="col-xs-12" style="padding-left:0px; padding-right:0px;">
                   <div class="col-xs-5 pull-right" style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
                    <table class="table table-condensed" t-attf-style="color:{{o.text_color}};"><tbody>
                        <tr t-attf-style="border-top: 1px solid {{o.text_color}};" >
                            <td t-attf-style="border-top: 1px solid {{o.text_color}} !important;"><strong>Total Without Taxes</strong></td>
                            <td class="text-right" t-attf-style="border-top: 1px solid {{o.text_color}} !important;">
                                <span t-field="o.amount_untaxed"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>

                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>

                            </td>
                        </tr>
                        <tr t-attf-style="border-bottom: 1px solid {{o.text_color}};">
                            <td t-attf-style="border-top: 1px solid {{o.text_color}} !important;"><strong>Total</strong></td>
                            <td class="text-right" t-attf-style="border-top: 1px solid {{o.text_color}} !important;">
                                 <strong>
                                        <span  style="font-weight:bold; text-decoration:underline;" t-field="o.amount_total"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>

                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td t-attf-style="border-top: 1px solid {{o.text_color}} !important;"><strong>Amount Due</strong></td>
                            <td class="text-right" t-attf-style="border-top: 1px solid {{o.text_color}} !important;">
                                 <strong>
				    <span  style="font-weight:bold;" t-field="o.residual" 
					t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
				</strong>
                            </td>

                        </tr>
                        <tr>
                            <td t-attf-style="border-top: 1px solid {{o.text_color}} !important;"><strong>Payment Status</strong></td>
                            <td class="text-right" t-attf-style="border-top: 1px solid {{o.text_color}} !important;">
                              <strong>
                              <span t-if="o.state == 'paid'" class="label label-info orders_label_text_align"><i class="fa fa-fw fa-check"/> Paid</span>
                              <span t-if="o.state != 'paid'" class="label label-info orders_label_text_align"><i class="fa fa-fw fa-clock-o"/> Open</span>
			      </strong>
                            </td>

                        </tr>
			</tbody>
                    </table>
                   </div>
                </div>
                 <div  t-if="o.tax_line" class="col-xs-12" style="padding-left:0px; padding-right:0px;">
                   <div class="col-xs-6 pull-left" style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
			<strong>Taxes:</strong>
                    <table class="table table-condensed" t-attf-style="color:{{o.text_color}};">
			<thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
			  <tr>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"></i></th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-pencil-square"> Tax</i></th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-calculator"> Base</i></th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-usd"> Amount</i></th>
			  </tr>
			</thead>
			<tbody>
			 <t t-foreach="o.tax_line" t-as="t">
                             <tr t-attf-style="background-color:{{o.odd if t_parity in 'odd' else o.even}}; page-break-inside: avoid !important;">
                                <td><span t-esc="t_index + 1"/></td>
                                <td><span t-field="t.name"/></td>
                                <td class="text-right">
					<span t-field="t.base" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
				</td>
                                <td class="text-right"><span t-field="t.amount" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></td>
			     </tr>
			 </t>
			</tbody>
		    </table>	
		   </div>
		 </div>
                 <div  t-if="o.payment_ids" class="col-xs-12" style="padding-left:0px; padding-right:0px;">
                   <div class="col-xs-6 pull-left" style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
			<strong>Payments:</strong>
                    <table class="table table-condensed" t-attf-style="color:{{o.text_color}};">
			<thead t-attf-style="background-color:{{o.theme_color}}; page-break-inside: avoid; color:{{o.theme_txt_color}};">
			  <tr>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-list-ol"></i></th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-calendar"> Date</i></th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-credit-card"> Method</i></th>
                                <th t-attf-style="{{th_style}}"><i class="fa fa-pencil-square"> Ref.</i></th>
                                <th class="text-right" t-attf-style="{{th_style}}"><i class="fa fa-usd"> Amount</i></th>
			  </tr>
			</thead>
			<tbody>
			 <t t-foreach="o.payment_ids" t-as="p">
                             <tr t-attf-style="background-color:{{o.odd if p_parity in 'odd' else o.even}}; page-break-inside: avoid !important;">
                                <td><span t-esc="p_index + 1"/></td>
                                <td><span t-field="p.date"/></td>
                                <td><span t-field="p.journal_id"/></td>
                                <td><span t-field="p.ref"/></td>
                                <td class="text-right"><span t-field="p.credit" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/></td>
			     </tr>
			 </t>
			</tbody>
		    </table>	
		   </div>
		 </div>
                <div class="col-xs-12 pull-left" style="padding-left:0px; padding-right:0px; page-break-inside: avoid ! important;">
                     <p t-if="o.payment_term.note">
                        <strong>Payment Terms:</strong> <span t-field="o.payment_term.note"/>
                     </p>
                     <p t-if="o.fiscal_position.note">
                         <strong>Fiscal Position Remark:</strong> <span t-field="o.fiscal_position.note"/>
                     </p>
                     <p t-if="o.comment">
                        <strong>Note:</strong> <span t-field="o.comment"/>
                     </p>
                </div>
	</template>
</data>
</openerp>
                      
